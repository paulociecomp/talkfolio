<section class="talks">
  <% talks.each do |talk| %>
    <article class="talk">
      <h1><%= talk.title %></h1>
      <p><%= talk.description %></p>

      <aside>
        <%= render "talks/aside_talker",  :talker => talk.user if show_talker %>
      </aside>

      <aside>
        <%= render "groups/aside_groups", :groups => talk.groups %>
      </aside>
      
    </article>
  <% end %>
</section>