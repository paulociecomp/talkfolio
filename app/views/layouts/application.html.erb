<!DOCTYPE html>
<html>
<head>
  <title>Talkfolio</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="topbar-container">
  <section id="topbar">
    <div id="logo">
      <h1>talkfolio</h1>
    </div>

    <nav>
      <ul>
        <li><%= link_to t(:my_talks), my_talks_path %></li>
        <li><%= link_to t(:my_groups), my_groups_path %></li>
        <li><span class="separator">|</span></li>
        <li><a>Sign out</a></li>
      </ul>
    </nav>
  </section>
</div>

<div id="content-container">
  <section id="content">
    <div><%= flash[:notice] %></div>

    <%= yield %>
</section>
</div>

</body>
</html>
